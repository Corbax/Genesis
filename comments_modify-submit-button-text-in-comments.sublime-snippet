//* Customize the submit button text in comments
add_filter( 'comment_form_defaults', 'sp_comment_submit_button' );
function sp_comment_submit_button( \$defaults ) { 
    $defaults['label_submit'] = __( '${1:Submit}', 'custom' );
    return \$defaults; 
}
]]></content>
